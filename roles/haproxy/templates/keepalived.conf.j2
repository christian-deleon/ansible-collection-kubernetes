{% if 'controlplane_master' in group_names %}
vrrp_instance VI_1 {
    state MASTER
    interface {{ ansible_default_ipv4.interface }}
    virtual_router_id 51
    priority 101
    advert_int 1
    virtual_ipaddress {
        {{ kubernetes_api_server }}
    }
}
{% elif 'controlplane_slave' in group_names %}
vrrp_instance VI_1 {
    state BACKUP
    interface {{ ansible_default_ipv4.interface }}
    virtual_router_id 51
    priority 100
    advert_int 1
    virtual_ipaddress {
        {{ kubernetes_api_server }}
    }
}
{% endif %}
